<Application
    x:Class="MarkdownWPF.SampleApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MarkdownWPF.SampleApp"
    xmlns:pages="clr-namespace:MarkdownWPF.SampleApp.Mvvm.Views.Pages"
    xmlns:viewmodels="clr-namespace:MarkdownWPF.SampleApp.Mvvm.ViewModels"
    StartupUri="Mvvm/Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type viewmodels:MarkdownPreviewViewModel}">
                <pages:MarkdownPreviewView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
